#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/marathon"

# Tiny task runner for marathon itself
class MarathonDevRunner < Marathon::Runner
  def test(_suite = "all")
    rspec
    ok "Tests passing!"
  end

  def check
    cop
    ok "Lint-free!"
  end
end

if __FILE__ == $PROGRAM_NAME
  runner = MarathonDevRunner.new
  runner.main(ARGV)
end
